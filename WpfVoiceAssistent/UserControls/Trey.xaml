<Window x:Class="WpfVoiceAssistent.UserControls.Trey"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfVoiceAssistent.UserControls"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="Trey" Height="450" Width="800" Visibility="Hidden">
    <Grid>

        
        <tb:TaskbarIcon Visibility="Visible" ToolTipText="VoiceAssistent" IconSource="voice.ico" >
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Открыть настройки" Click="MenuItem_Click_1" Padding="2" Background="#99FF99"/>
                    <MenuItem Header="Выключить программу" FontWeight="Bold" Click="MenuItem_Click" Padding="2" Background="#FFB6C1"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>


    </Grid>
</Window>
